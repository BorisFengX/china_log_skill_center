<%= render 'shared/navbarwhite' %>
<div class='page-wrapper'>
  <div class="row">
    <% @data.each do |k,v| %>
      <div class="col col-xs-12 col-sm-6 col-md-3">
        <div class="card-chart">

          <div class="vertical-box no-margin center">
            <div>
              <%= k.to_s.capitalize %>
            </div>
            <div>
              Overall achieving rate: <%= v[:total][2].round(2)*100 %>%
            </div>
            <div>
              <div id="<%= k.to_s %>_total" style="width: 300px;height:300px;"></div>
            </div>
          </div>

          <div class="flat-box small-text">
            <div class = "vertical-box margin-around">
              <div>Validation</div>
              <div class="vertical-box no-margin">
                <div>Target validation: <%= v[:total][3] %></div>
                <div>Real validation: <%= v[:total][4] %></div>
                <div>Achieving rate: <%= v[:total][5].round(2)*100 %>%</div>
              </div>
              <div>
                <div class="progress" style="width: 100%; height:20px; background-color: rgb(200,200,200)">
                  <div class="progress-bar" role="progressbar" style="width: <%= v[:total][5].round(0)*100 %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= v[:total][5].round(2)*100 %>%</div>
                </div>
              </div>
            </div>

            <div class = "vertical-box margin-around">
              <div>Referent</div>
              <div class="vertical-box no-margin">
                <div>Target referent: <%= v[:total][6] %></div>
                <div>Real referent: <%= v[:total][7] %></div>
                <div>Achieving rate: <%= v[:total][8].round(2)*100 %>%</div>
              </div>
              <div>
                <div class="progress" style="width: 100%; height:20px; background-color: rgb(200,200,200)">
                  <div class="progress-bar" role="progressbar" style="width: <%= v[:total][8].round(2)*100 %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= v[:total][8].round(0)*100 %>%</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
