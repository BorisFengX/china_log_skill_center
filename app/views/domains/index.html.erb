<div class="card-wrapper">
  <div class="row">
    <% @domains.each do |d| %>
      <div class="col col-xs-12 col-sm-6 col-md-6">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= d.pic %>')">
        <%= link_to d.name, domain_path(d) %>
        </div>
      </div>
    <% end %>
  </div>
</div>



